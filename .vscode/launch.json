    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Python Debugger: caenDownloader.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/caenDownloader.py",
            "console": "integratedTerminal",
            "args": [
                // "--verbose", "0", "--listRecordings"
                // "--verbose", "0", "--listCourses"
                "--verbose", "0", "--start=2021", "--stop=2021"
            ]
        }
    ]
}